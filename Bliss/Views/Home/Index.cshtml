
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>CSV Uploading File</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Upload CSV File</h1>
        <form id="uploadForm" asp-controller="Home" asp-action="AddPerson" method="post" enctype="multipart/form-data">
            <input type="file" name="csvFile" accept=".csv" />
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
   
        
        <h3 class="mt-5">People</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date of Birth</th>
                    <th>Married</th>
                    <th>Phone</th>
                    <th>Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr data-id="@person.Id">
                        <td><input type="text" class="form-control" value="@person.Name" /></td>
                        <td><input type="date" class="form-control" value="@person.DateOfBirth.ToString("yyyy-MM-dd")" /></td>
                        <td><input type="checkbox" class="form-control" @(person.Married ? "checked" : "") /></td>
                        <td><input type="text" class="form-control" value="@person.Phone" /></td>
                        <td><input type="number" class="form-control" step="0.01" value="@person.Salary" /></td>
                        <td>
                            <button class="btn btn-success save-btn">Save</button>
                            <button class="btn btn-danger delete-btn">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
    $(document).on('click', '.save-btn', function () {
        var row = $(this).closest('tr');
        var id = row.data('id');
        var data = {
            Id: id,
            Name: row.find('input:eq(0)').val(),
            DateOfBirth: row.find('input:eq(1)').val(),
            Married: row.find('input:eq(2)').is(':checked'),
            Phone: row.find('input:eq(3)').val(),
            Salary: row.find('input:eq(4)').val()
        };

        $.ajax({
            url: '@Url.Action("Edit", "Home")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function (result) {
                if (result.success) {
                    alert('Record updated successfully.');
                } else {
                    alert('Error updating record.');
                }
            }
        });
    });

    $(document).on('click', '.delete-btn', function () {
        if (confirm('Are you sure you want to delete this record?')) {
            var row = $(this).closest('tr');
            var id = row.data('id');

            $.ajax({
                url: '@Url.Action("Delete", "Home")',
                type: 'POST',
                data: JSON.stringify({ id: id }),
                contentType: 'application/json',
                success: function (result) {
                    if (result.success) {
                        row.remove();
                        alert('Record deleted successfully');
                    } else {
                        alert('Error deleting record');
                    }
                }
            });
        }
    });
    </script>
</body>
</html>
